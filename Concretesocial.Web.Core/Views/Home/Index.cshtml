@{
    ViewData["Title"] = "Home Page";
}
<div class="panel panel-default">
    <div class="panel-heading">Authorize</div>
    <div class="panel-body">
        <a href="https://concretesocial.io/docs#generate" target="_blank">Documentation</a>
        <br />
        <a class="btn btn-primary" href="https://concretesocial.io/1.0/authorize?client_id=@Model.ClientID&redirect_url=@Model.CallBackURL">Run</a>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Activate profile</h3>
    </div>
    <div class="panel-body">
        <a href="https://concretesocial.io/docs#connect" target="_blank">Documentation</a>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">List connected profiles</h3>
    </div>
    <div class="panel-body">
        <a href="https://concretesocial.io/docs" target="_blank">Documentation</a>
        <br />
        <a class="btn btn-primary" href="@Url.Action(string.Empty, "ListConnectedProfiles")">Run</a>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Publish media (image or video)</h3>
    </div>
    <div class="panel-body">
        <a href="https://concretesocial.io/docs#publish" target="_blank">Documentation</a>
        <br />
        <a class="btn btn-primary" href="@Url.Action(string.Empty, "PublishMedia")">Run</a>
    </div>
</div>


